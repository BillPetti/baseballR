year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the baseballr R package in publications, use:")

citEntry(entry = "Misc",
         author = personList(
         as.person("Bill Petti"),
         as.person("Saiem Gilani")),
         title = "baseballr: The SportsDataverse's R Package for Baseball Data.",
         url = c("billpetti.github.io/baseballr/"),
         year = year,
         note = note,
         textVersion = paste(
    "Bill Petti and Saiem Gilani. baseballr: The SportsDataverse's R Package for Baseball Data.",
    "Retrieved from https://billpetti.github.io/baseballr/"
  )
)
